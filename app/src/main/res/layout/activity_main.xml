<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".Activities.MainActivity">

   <include layout="@layout/app_bar"/>

    <ImageView
        android:id="@+id/xHomeScreen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/colorAccent"
        android:fitsSystemWindows="true"
        android:src="@drawable/homeimage" />

    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:backgroundTint="@color/colorPrimary"
        app:cardCornerRadius="2dp"
        app:cardElevation="5dp">

        <Button
            android:id="@+id/xCalendars"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="@string/calendars"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize"
            android:textStyle="bold" />
    </android.support.design.card.MaterialCardView>

    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="1"
        android:backgroundTint="@color/colorPrimary"
        app:cardCornerRadius="2dp"
        app:cardElevation="5dp">

        <Button
            android:id="@+id/xJobPostings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="@string/job_postings"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize"
            android:textStyle="bold" />
    </android.support.design.card.MaterialCardView>

    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="1"
        android:backgroundTint="@color/colorPrimary"
        app:cardCornerRadius="2dp"
        app:cardElevation="5dp">

        <Button
            android:id="@+id/xFindUs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="@string/find_us"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize"
            android:textStyle="bold" />
    </android.support.design.card.MaterialCardView>

    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="1"
        android:backgroundTint="@color/colorPrimary"
        app:cardCornerRadius="2dp"
        app:cardElevation="5dp">

        <Button
            android:id="@+id/xDonate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="@string/donate"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize"
            android:textStyle="bold" />
    </android.support.design.card.MaterialCardView>

    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="1"
        android:backgroundTint="@color/colorPrimary"
        app:cardCornerRadius="2dp"
        app:cardElevation="5dp">

        <Button
            android:id="@+id/xUpdates"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="@string/updates"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize"
            android:textStyle="bold" />
    </android.support.design.card.MaterialCardView>

    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_weight="1"
        android:backgroundTint="@color/colorPrimary"
        app:cardCornerRadius="2dp"
        app:cardElevation="5dp">

        <Button
            android:id="@+id/xContactUs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="@string/contact_us"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize"
            android:textStyle="bold" />
    </android.support.design.card.MaterialCardView>


</LinearLayout>